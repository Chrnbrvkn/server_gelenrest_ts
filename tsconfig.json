{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["express"],
    "outDir": "./dist",
    "rootDir": "./src"
  },

  "include": [
    "src/**/*",
    "src/types/global.d.ts"
  ],
  "exclude": ["node_modules"]
}
